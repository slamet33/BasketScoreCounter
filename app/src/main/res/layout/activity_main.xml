<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.basketscorecounter.MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/yosh"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:gravity="center_horizontal" />
            <TextView
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="75sp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/team_a_score"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="130dp"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="31dp"
                android:text="+1 Point"
                android:background="#86d3cd"
                android:layout_marginBottom="10dp"
                android:onClick="teamAOneScore"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="130dp"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="31dp"
                android:text="+2 Point"
                android:background="#86d3cd"
                android:layout_marginBottom="10dp"
                android:onClick="teamATwoScore"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="130dp"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="31dp"
                android:text="+3 point"
                android:background="#86d3cd"
                android:onClick="teamAThreeScore"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:gravity="center_horizontal" />
            <TextView
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="75sp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/team_b_score"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="130dp"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="31dp"
                android:text="+1 Point"
                android:background="#86d3cd"
                android:layout_marginBottom="10dp"
                android:onClick="teamBOneScore"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="130dp"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="31dp"
                android:text="+2 Point"
                android:background="#86d3cd"
                android:layout_marginBottom="10dp"
                android:onClick="teamBTwoScore"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="130dp"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="31dp"
                android:text="+3 point"
                android:background="#86d3cd"
                android:onClick="teamBThreeScore"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="30dp"
            android:text="reset"
            android:onClick="resetButton"/>

    </LinearLayout>
</LinearLayout>